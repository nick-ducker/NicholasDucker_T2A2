<div class="spacer"></div>
  <div class='row align-items-center justify-content-center'>
    <div class='col-9 col-md-6 p-5 primary d-flex flex-column align-items-center justify-content-center'>
      <div class="row">
        <h1>Leave a review about <%= @blend.name %></h1>
      </div>

      <%= form_with model: @review, local: true do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :blend_id, value: @blend.id %>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.number_field :rating, in: 1..5, required: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :descrip, 'Your Review' %>
        <%= f.text_area :descrip, required: true, class: "form-control" %>
      </div>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>

