<h1>Edit <%= @blend.name %></h1>

<% if @blend.image.attached? %>
  <% @blend.image.each do |image| %>
    <%=  image_tag image %>
    <%= link_to "Delete Image", delete_image_blend_path(image),
                              method: 'DELETE',
                              data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>

<%= form_with model: @blend, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :price %>
  <%= f.number_field :price %><br>
  <%= f.label :shipping_cost %>
  <%= f.number_field :shipping_cost %><br>
  <%= f.label :discount_amount %>
  <%= f.number_field :discount_amount %><br>
  <%= f.label :quantity %>
  <%= f.number_field :quantity %><br>
  <%= f.label :descrip %>
  <%= f.text_area :descrip %><br>
  <%= f.label :weight %>
  <%= f.number_field :weight %><br>
  <%= f.label :property, 'Categories' %>
  <%= f.collection_check_boxes :property_ids, Property.all, :id, :name %><br>
  <%= f.label :image, 'Images' %>
  <%= f.file_field :image, multiple: true %><br>
  <%= f.submit %>

<% end %>
