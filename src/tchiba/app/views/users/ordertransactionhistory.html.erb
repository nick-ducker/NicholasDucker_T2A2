<div class='container height'>
  <div class='spacer'></div>
  <div class='row h-100 align-items-center justify-content-center'>
    <div class='col-10 col-md-6 my-3 primary d-flex flex-column align-items-center justify-content-center'>
      
      <div class='row'>
      <h3>Orders</h3>
      </div>

      <div class='row'>
      <h5><strong>Buying</strong></h5>
      </div>
      <%= render 'shared/orders', collection: @buyerorders %>
      
      <div class='row'>
      <h5><strong>Selling</strong></h5>
      </div>
      <%= render 'shared/orders', collection: @sellerorders %>

      <hr>

      <div class='row'>
      <h3>Transactions</h3>
      </div>
      
      <div class='row'>
      <h5><strong>Buyer</strong></h5>
      </div>
      <%= render 'shared/transactions', collection: @buyertransactions %>

      <div class='row'>
      <h5><strong>Seller</strong></h5>
      </div>
      <%= render 'shared/transactions', collection: @sellertransactions %>

    </div>
  </div>
</div>