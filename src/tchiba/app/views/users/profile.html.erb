<h1>Users#profile</h1>

<p> Username: <%= @user.name %> </p>
<p> E-Mail: <%= @user.email %> </p>
<p> Bio: <%= @user.bio %> </p>
<%= image_tag @user.profilepic if @user.profilepic.attached? %>

<% if @blends.empty? %>
  <p>This user has not created any blends</p>
<% else %>
  <% @blends.each do |blend| %>
    <p><%= link_to  blend.name, blend_path(blend) %></p>
    <p><%= blend.price %></p>
    <p><%= blend.weight %></p>
    <p><%= blend.totalrating %></p>
  <% end %>
<% end %>

<% if @reviews %>
  <p>This user has not created any reviews</p>
<% else %>
  <% @reviews.each do |review| %>
    <p><%= review.blend.name %></p>
    <p><%= review.rating %></p>
    <p><%= review.created_at %></p>
  <% end %>
<% end %>