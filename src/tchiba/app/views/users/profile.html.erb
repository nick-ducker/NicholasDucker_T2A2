<div class='container height'>
  <div class='spacer'></div>
  <div class='row h-100 align-items-center justify-content-center'>
    <div class='col my-3 primary d-flex flex-column align-items-center justify-content-center'>
      
      <div class="row w-75 justify-content-between my-3">
        <h1><%=@user.name%></h1><h1><%=@user.address.state%></h1>
      </div>

      <%  if @user.profilepic.attached? %>
      <div class='row flex-column m-2'>
      <%= image_tag @user.profilepic, class: 'img-fluid imgborder' %>
      </div>
      <% else %>
      <div class='row flex-column m-2'>
      <%= image_tag  "teapot.jpg" %>
      </div>
      <% end %>

      <hr>
      
      <% if @blends.empty? %>
      <div class="row">
        <h5>This user has not created any blends</h5>
      </div>
      <% else %>
        <div class="row">
          <h5>Blends</h5>
        </div>
        <%= render  "shared/blends", collection: @pagyblends %>
      <% end %>
      
      <hr>

      <% if @reviews.empty? %>
      <div class="row">
        <h5>This user has not submitted any reviews</h5>
      </div>
      <% else %>
        <div class="row">
          <h5>Reviews</h5>
        </div>
        <%= render  "shared/reviews", collection: @pagy %>
      <% end %>
    </div>
  </div>
</div>